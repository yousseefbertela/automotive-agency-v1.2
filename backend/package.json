{
  "name": "automotive-workflows-unified",
  "version": "1.0.0",
  "description": "Automotive parts AI agent: Frontend chat + WhatsApp confirmation/cancellation (converted from n8n)",
  "main": "src/server.js",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "start:deploy": "prisma migrate deploy && node src/server.js",
    "postinstall": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "test": "jest --forceExit --detectOpenHandles",
    "build": "prisma generate && node -c src/server.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "axios": "^1.7.9",
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "googleapis": "^144.0.0",
    "merge-descriptors": "^1.0.1",
    "multer": "^2.0.2",
    "openai": "^4.77.0",
    "prisma": "^5.15.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
